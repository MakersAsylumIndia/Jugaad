{
  "name": "roots/bedrock",
  "type": "project",
  "license": "MIT",
  "description": "A modern WordPress stack",
  "homepage": "https://roots.io/bedrock/",
  "authors": [
    {
      "name": "Scott Walkinshaw",
      "email": "scott.walkinshaw@gmail.com",
      "homepage": "https://github.com/swalkinshaw"
    },
    {
      "name": "Ben Word",
      "email": "ben@benword.com",
      "homepage": "https://github.com/retlehs"
    }
  ],
  "keywords": [
    "bedrock", "roots", "wordpress", "stack", "composer", "vagrant", "wp"
  ],
  "support": {
    "issues": "https://github.com/roots/bedrock/issues",
    "forum": "https://discourse.roots.io/category/bedrock"
  },
  "config": {
    "preferred-install": "dist"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://wpackagist.org"
    }
  ],
  "require": {
    "php": ">=5.5",
    "composer/installers": "~1.0.12",
    "vlucas/phpdotenv": "^2.0.1",
    "johnpbloch/wordpress": "4.3.1",
    "wpackagist-theme/canard": "^1.0.6",
    "wpackagist-plugin/akismet": "^3.1.5",
    "wpackagist-plugin/easy-author-image": "^1.5",
    "wpackagist-plugin/yikes-inc-easy-mailchimp-extender": "^6.0.2.4",
    "wpackagist-plugin/jetpack": "^3.7.2",
    "wpackagist-plugin/members": "^1.1.0",
    "wpackagist-plugin/wck-custom-fields-and-custom-post-types-creator": "^1.1.6",
    "wpackagist-plugin/wordpress-importer": "^0.6.1",
    "afragen/github-updater": "^5.2",
    "wp-sync-db/wp-sync-db": "dev-master",
    "wp-sync-db/wp-sync-db-media-files": "^1.1",
    "roots/soil": "^3.5",
    "wpackagist-plugin/recent-posts-widget-extended": "^0.9.9.5",
    "wpackagist-plugin/add-to-any": "^1.6.7"
  },
  "extra": {
    "installer-paths": {
      "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
      "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
      "web/app/themes/{$name}/": ["type:wordpress-theme"]
    },
    "wordpress-install-dir": "web/wp"
  }
}
